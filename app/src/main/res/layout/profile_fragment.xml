<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profilim"
            android:textColor="@color/white"
            android:fontFamily="@font/raleway_bold"
            android:textSize="34sp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="@color/white"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"

                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:elevation="12dp"
                    android:innerRadius="0dp"
                    android:shape="ring"
                    android:layout_marginTop="10dp"
                    android:thicknessRatio="1.9"
                    app:cardCornerRadius="100dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/profile_pp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:scaleType="centerCrop"

                        />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardView">

                    <TextView
                        android:id="@+id/profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/raleway_semibold"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/profile_school"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/raleway_regular"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/profile_duzenle"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_marginHorizontal="10dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/white"
            app:cardUseCompatPadding="true"

            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Profili Düzenle"
                android:textColor="@color/black"
                android:fontFamily="@font/raleway_bold"
                android:textSize="18sp"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="30dp"
                android:gravity="center|start"
                android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
                android:drawablePadding="150dp"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/profile_ilanlarim"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_marginHorizontal="10dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/white"
            app:cardUseCompatPadding="true"

            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="İlanlarım"
                android:textColor="@color/black"
                android:fontFamily="@font/raleway_bold"
                android:textSize="18sp"
                android:layout_marginVertical="10dp"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="40dp"
                android:gravity="center|start"
                android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
                android:drawablePadding="150dp"
                />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/profile_cikis"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_marginHorizontal="10dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/white"
            app:cardUseCompatPadding="true"

            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Çıkış Yap"
                android:textColor="@color/black"
                android:fontFamily="@font/raleway_bold"
                android:textSize="18sp"
                android:layout_marginEnd="30dp"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="40dp"
                android:gravity="center|start"
                android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
                android:drawablePadding="150dp"
                />
        </androidx.cardview.widget.CardView>




    </LinearLayout>




</ScrollView>