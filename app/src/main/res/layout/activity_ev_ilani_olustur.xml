<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.IlanDetayActivity"
    android:background="@color/main"
    >

    <ImageView
        android:id="@+id/evilanolustur_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:elevation="5dp"
        android:src="@drawable/arrow_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="30dp"

        >

        <TextView
            android:id="@+id/evilanolustur_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/color1"
            android:fontFamily="@font/raleway_bold"
            android:textSize="40sp"
            android:text="@string/sifre"
            />

        <EditText
            android:id="@+id/evilanolustur_tanitimedit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/raleway_regular"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:hint="@string/tanitim_yazisi_giriniz"
            android:inputType="textMultiLine"
            android:imeOptions="actionDone"
            android:minLines="3"
            android:maxLines="5"

            />

       <androidx.cardview.widget.CardView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           app:cardBackgroundColor="@color/color1"
           app:cardUseCompatPadding="true"
           app:cardCornerRadius="10dp"
           android:layout_marginTop="50dp"

           >
           <Button
               android:id="@+id/evilanolustur_button"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="@color/color1"
               android:elevation="0dp"
               android:shadowColor="@color/color1"
               android:layout_marginHorizontal="20dp"
               android:fontFamily="@font/raleway_bold"

               />

       </androidx.cardview.widget.CardView>


    </LinearLayout>















</androidx.constraintlayout.widget.ConstraintLayout>